                "-pedantic",
                "-Wold-style-cast",
                "-Wcast-align",
                "-Wunused",
                "-Woverloaded-virtual",
                "-Wpedantic",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wmisleading-indentation",
                "-Wduplicated-cond",
                "-Wduplicated-branches",
                "-Wlogical-op",
                "-Wnull-dereference",
                "-Wuseless-cast",
                "-Wdouble-promotion",
                "-Wformat=2",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
